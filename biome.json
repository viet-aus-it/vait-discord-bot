{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "include": ["*.config.*", "*.setup.*", "bin/**", "src/**", "mocks/**", "**/*.json", "**/*.md", "**/*.yaml", "**/*.yml"],
    "ignore": ["node_modules", "build", "coverage"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160,
    "ignore": ["node_modules/**", "./src/commands/referral/generated"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "always"
    }
  }
}
