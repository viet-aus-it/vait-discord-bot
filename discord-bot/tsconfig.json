{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["jest", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "build",
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts"]
}
