// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-1.1.x", "linux-arm64-openssl-3.0.x"]
  previewFeatures = ["relationJoins"]
  output = "../src/clients/prisma/generated/client"
}

model User {
  id String @id

  reputation    Int             @default(0)
  thankTo       ReputationLog[] @relation("FromUser")
  thankBy       ReputationLog[] @relation("ToUser")
  reminders     Reminder[]
  referralCodes ReferralCode[]
}

model ReputationLog {
  id         String   @id @default(cuid())
  from       User     @relation(name: "FromUser", fields: [fromUserId], references: [id])
  fromUserId String
  to         User     @relation(name: "ToUser", fields: [toUserId], references: [id])
  toUserId   String
  operation  Json     @default("{}")
  createdAt  DateTime @default(now())
}

model ReferralCode {
  id          String   @id @default(cuid())
  service     String
  code        String
  expiry_date DateTime
  guildId     String
  userId      String
  owner       User     @relation(fields: [userId], references: [id])
}

model Reminder {
  id          String @id @default(cuid())
  userId      String
  owner       User   @relation(fields: [userId], references: [id])
  onTimestamp Int // Unix Timestamp
  message     String
  guildId     String

  @@index(id)
  @@index(userId)
}

model ServerChannelsSettings {
  guildId          String   @unique
  reminderChannel  String?  @unique
  autobumpThreads  String[] @default([])
  aocKey           String?
  aocLeaderboardId String?

  @@index(guildId)
}

model AocLeaderboard {
  guildId String @unique

  result    Json
  updatedAt DateTime @default(now())

  @@index(guildId)
}
